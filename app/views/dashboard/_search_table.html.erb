<div class="portlet light bordered">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-social-dribbble font-green"></i>
      <span class="caption-subject font-green bold uppercase">站內搜尋分析(相較七日內)</span>
    </div>
    <div class="actions">
      <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
        <i class="icon-cloud-upload"></i>
      </a>
      <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
        <i class="icon-wrench"></i>
      </a>
      <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
        <i class="icon-trash"></i>
      </a>
    </div>
  </div>
  <div class="portlet-body">
    <div class="table-scrollable">
      <table class="table table-hover">
        <!-- <table class="table table-striped table-hover "> -->
        <thead>
          <tr>
            <th>搜尋字詞</th>
            <th>被查次數</th>
            <th>搜尋離開率</th>
            <th>重複搜尋率</th>
          </tr>
        </thead>
        <tbody>
          <% @searchsData.each do |obj| %>
          <tr>
            <td><%= obj[0] %></td>
            <td>
              <%= obj[1] %>(
              <% if obj[-1] == 'new' %>
                <font color="yellow"><i class="fa fa-star"></i></font>
                新進榜
              <% elsif obj[-1] >=0 %>
                <font color="red"><i class="fa fa-arrow-up"></i></font>
                <%= (obj[-1].to_f).round(2) %>%
              <% else %>
                <font color="green"><i class="fa fa-arrow-down"></i></font>
                -<%= (1 - obj[-1].to_f).round(2) %>%
              <% end %>
              )
            </td>
            <td><%= (obj[3].to_f).round(2) %>%</td>
            <td><%= (obj[2].to_f).round(2) %>%</td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
